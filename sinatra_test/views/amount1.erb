<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>D3: Czech bar</title>
    <script type="text/javascript" src="http://d3js.org/d3.v3.min.js"></script>
  </head>
  <body>
    <script type="text/javascript">

      //Width and height
      var w = 1200;
      var h = 800;

      //Create SVG element
      var svg = d3.select("body")
            .append("svg")
            .attr("width", w)
            .attr("height", h);

      d3.csv("euro.csv", function(data) {
        svg.selectAll("rect")
           .data(data)
           .enter()
           .append("rect")
           .attr("x", function(d, i) {
              return i * (w / data.length);
           })
           .attr("y", 0)
           .attr("width", 20)
           .attr("height", 100);

          });
    </script>
  </body>
</html>
